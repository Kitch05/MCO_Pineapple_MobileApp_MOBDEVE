<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1A1A1A">

    <!-- Comment Content -->
    <TextView
        android:id="@+id/commentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment content"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:padding="4dp" />

    <!-- Username and Timestamp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/commentUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="12sp"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/commentTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Timestamp"
            android:textSize="10sp"
            android:textColor="#808080" />
    </LinearLayout>

    <!-- Reply Input Section (hidden by default) -->
    <LinearLayout
        android:id="@+id/replyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <!-- Reply Input Field -->
        <EditText
            android:id="@+id/replyInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Write a reply..."
            android:padding="8dp"
            android:backgroundTint="#FFFFFF"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitReplyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginStart="8dp"
            android:backgroundTint="#6B50A4"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Voting Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginTop="8dp">

        <!-- Upvote Button -->
        <ImageButton
            android:id="@+id/upvoteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/upvoteicon"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#F1F6F9"
            android:contentDescription="Upvote" />


        <!-- Upvote Count -->
        <TextView
            android:id="@+id/upvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />

        <!-- Downvote Button -->
        <ImageButton
            android:id="@+id/downvoteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/downvote"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Downvote"
            app:tint="#F1F6F9"/>

        <!-- Downvote Count -->
        <TextView
            android:id="@+id/downvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            app:tint="#F1F6F9"/>
    </LinearLayout>

    <!-- Reply Button -->
    <Button
        android:id="@+id/replyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:textSize="12sp"
        android:backgroundTint="#6B50A4"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- Replies RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/repliesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp" />
</LinearLayout>
